@namespace Davivienda.Component.Componentes
@using Davivienda.Models.Modelos

<div class="modal-overlay">
    <div class="modal-card-premium animate-pop">
        @* Línea superior decorativa Davivienda *@
        <div class="modal-top-accent-green"></div>

        <div class="modal-head">
            <h2 class="modal-title-main">
                <i class="fas fa-plus-circle"></i> Nueva Tarea
            </h2>
            <button class="close-x-dav" @onclick="CerrarModal">×</button>
        </div>

        <div class="modal-body">
            <p class="modal-subtitle">Asignación de actividades para el proceso actual</p>

            <div class="form-grid-dav">
                @* Nombre de la Tarea *@
                <div class="input-container-dav full-width">
                    <label>NOMBRE DE LA TAREA</label>
                    <input type="text" @bind="NuevaTarea.TAR_NOM" class="input-field-dav" placeholder="Ej: Desarrollo de API" />
                </div>

                @* Descripción *@
                <div class="input-container-dav full-width">
                    <label>DESCRIPCIÓN DETALLADA</label>
                    <textarea @bind="NuevaTarea.TAR_DES" rows="3" class="input-field-dav" placeholder="Detalle las actividades..."></textarea>
                </div>

                @* Tiempos y Estado *@
                <div class="input-container-dav">
                    <label>FECHA INICIO</label>
                    <input type="date" @bind-value="NuevaTarea.TAR_FEC_INI" @bind-value:format="yyyy-MM-dd" class="input-field-dav" />
                </div>

                <div class="input-container-dav">
                    <label>FECHA FINALIZACIÓN</label>
                    <input type="date" @bind-value="NuevaTarea.TAR_FEC_FIN" @bind-value:format="yyyy-MM-dd" class="input-field-dav" />
                </div>

                <div class="input-container-dav">
                    <label>ESTADO INICIAL</label>
                    <select @bind="NuevaTarea.TAR_EST" class="input-field-dav select-dav visual-fix">
                        <option value="Pendiente">Pendiente</option>
                        <option value="En Progreso">En Progreso</option>
                        <option value="Completado">Completado</option>
                    </select>
                </div>

                @* Responsable *@
                <div class="input-container-dav">
                    <label>USUARIO RESPONSABLE</label>
                    <select @bind="NuevaTarea.USU_ID" class="input-field-dav select-dav visual-fix">
                        <option value="@Guid.Empty">-- Seleccionar Responsable --</option>
                        @foreach (var usu in ListaUsuarios)
                        {
                            <option value="@usu.USU_ID">@usu.USU_NOM</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="modal-foot-dav">
            <button class="btn-secondary-dav" @onclick="CerrarModal">Cancelar</button>
            <button class="btn-save-main-dav-green" @onclick="GuardarNuevaTarea">
                <i class="fas fa-check"></i> Crear Tarea
            </button>
        </div>
    </div>
</div>