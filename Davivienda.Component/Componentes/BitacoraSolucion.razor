@namespace Davivienda.Component.Componentes
@using Davivienda.Models.Modelos
@using Davivienda.GraphQL.SDK

<div class="bitacora-premium-container animate-fade-in">
    @* --- BARRA DE FILTROS TIPO DOCK --- *@
    <div class="toolbar-filters-dav">
        <div class="filter-capsule">
            <i class="fas fa-project-diagram icon-accent-blue"></i>
            <div class="filter-text">
                <label>PROYECTO</label>
                <select class="select-premium" @onchange="OnProyectoChanged">
                    <option value="">Todos los Proyectos</option>
                    @foreach (var pro in ProyectosList)
                    {
                        <option value="@pro.PRO_ID">@pro.PRO_NOM</option>
                    }
                </select>
            </div>
        </div>

        <div class="filter-capsule">
            <i class="fas fa-sync-alt icon-accent-blue"></i>
            <div class="filter-text">
                <label>PROCESO</label>
                <select class="select-premium" @onchange="OnProcesoChanged">
                    <option value="">Todos los Procesos</option>
                    @foreach (var proc in ProcesosFiltrados)
                    {
                        <option value="@proc.PROC_ID">@proc.PROC_NOM</option>
                    }
                </select>
            </div>
        </div>

        <div class="filter-capsule no-border">
            <i class="fas fa-tasks icon-accent-blue"></i>
            <div class="filter-text">
                <label>TAREA</label>
                <select class="select-premium" @onchange="OnTareaChanged">
                    <option value="">Todas las Tareas</option>
                    @foreach (var tar in TareasFiltradas)
                    {
                        <option value="@tar.TAR_ID">@tar.TAR_NOM</option>
                    }
                </select>
            </div>
        </div>
    </div>

    @* --- VIEWPORT DE TARJETAS HORIZONTALES --- *@
    <div class="horizontal-cards-viewport custom-scroll">
        @if (SolucionesFiltradas != null && SolucionesFiltradas.Any())
        {
            @foreach (var sol in SolucionesFiltradas)
            {
                <div class="card-premium-bitacora animate-pop" @onclick="() => AbrirDetalle(sol)">
                    <div class="card-indicator" style="background-color: @ObtenerColorTarea(sol.FRI_ID)"></div>

                    <div class="card-inner-content">
                        <div class="card-top-row">
                            <span class="badge-tarea" style="background-color: @ObtenerColorTarea(sol.FRI_ID)">
                                @ObtenerNombreTareaPorFriccion(sol.FRI_ID)
                            </span>
                            <span class="badge-status-premium">@sol.SOL_EST.ToUpper()</span>
                        </div>

                        <h4 class="card-main-title">@sol.SOL_NOM</h4>
                        <p class="card-main-desc">@sol.SOL_DES</p>

                        <div class="card-footer-stats">
                            <div class="stat-group">
                                <span class="stat-label">EFECTIVIDAD</span>
                                <span class="stat-value text-green">@sol.SOL_NIV_EFE%</span>
                            </div>
                            <div class="stat-group">
                                <span class="stat-label">REGISTRO</span>
                                <span class="stat-value">@sol.SOL_FEC_CRE.ToString("dd MMM yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state-dav">
                <i class="fas fa-search"></i>
                <p>No se encontraron soluciones para los filtros seleccionados.</p>
            </div>
        }
    </div>
</div>

@* --- MODAL DE DETALLE ESPACIOSO --- *@
@if (MostrarDetalle && SolucionSeleccionada != null)
{
    <div class="modal-overlay-blur" @onclick="CerrarDetalle">
        <div class="detail-card-premium animate-zoom" @onclick:stopPropagation>
            <div class="bg-blue-gradient"></div>

            <div class="detail-head">
                <div class="head-title-group">
                    <span class="label-premium text-blue">DETALLE TÉCNICO</span>
                    <h3>@SolucionSeleccionada.SOL_NOM</h3>
                </div>
                <button class="btn-close-circle" @onclick="CerrarDetalle">×</button>
            </div>

            <div class="detail-body">
                <div class="stats-grid-premium">
                    <div class="stat-box-large">
                        <label class="label-premium">NIVEL DE ÉXITO</label>
                        <p class="stat-display text-green">@SolucionSeleccionada.SOL_NIV_EFE%</p>
                    </div>
                    <div class="stat-box-large">
                        <label class="label-premium">ESTADO OPERATIVO</label>
                        <p class="stat-display text-dark">@SolucionSeleccionada.SOL_EST</p>
                    </div>

                    <div class="desc-section-full">
                        <label class="label-premium">ANÁLISIS DE LA PROPUESTA IMPLEMENTADA</label>
                        <div class="desc-viewport-premium bg-light-blue">
                            @SolucionSeleccionada.SOL_DES
                        </div>
                    </div>
                </div>

                <div class="detail-footer-info">
                    <i class="far fa-calendar-check"></i>
                    <span>Creado el @SolucionSeleccionada.SOL_FEC_CRE.ToString("f")</span>
                </div>
            </div>
        </div>
    </div>
}