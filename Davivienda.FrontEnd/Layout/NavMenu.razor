@using Microsoft.AspNetCore.Components.Authorization
@using Davivienda.FrontEnd.Security
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<div class="nav-container">
    @* ENCABEZADO: Nombre del Usuario *@
    <div class="user-header">
        <AuthorizeView>
            <Authorized>
                <div class="d-flex align-items-center py-2 px-3">
                    <div class="user-avatar me-2">
                        @context.User.Identity?.Name?.Substring(0, 1).ToUpper()
                    </div>
                    <div class="user-info">
                        <span class="user-name">@context.User.Identity?.Name</span>
                        <small class="user-role-text">Conectado</small>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="py-2 px-3">
                    <span class="user-name">Invitado</span>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    @* CUERPO: Enlaces de Navegación *@
    <div class="nav-scrollable">
        <nav class="flex-column">
            @* Item General *@
            <div class="nav-item">
                <NavLink class="nav-link" href="Asignaciones">
                    <span class="bi bi-clipboard-check" aria-hidden="true"></span> Asignaciones
                </NavLink>
            </div>

            @* Sección Administrativa Desplegable *@
            <AuthorizeView Roles="Administrador,LiderTecnico">
                <Authorized>
                    <div class="nav-item">
                        <button class="nav-link btn-dropdown-dav" @onclick="ToggleAdminMenu">
                            <span class="bi bi-shield-lock" aria-hidden="true"></span> Gestión Admin
                            <i class="bi @(isAdminOpen ? "bi-chevron-up" : "bi-chevron-down") ms-auto"></i>
                        </button>

                        @if (isAdminOpen)
                        {
                            <div class="submenu-dav animate-pop">
                                <NavLink class="nav-link subitem" href="Proyectos">
                                    <span class="bi bi-folder"></span> Proyecto
                                </NavLink>
                                <NavLink class="nav-link subitem" href="Tarea">
                                    <span class="bi bi-list-task"></span> Tarea
                                </NavLink>
                                <NavLink class="nav-link subitem" href="Usuario">
                                    <span class="bi bi-people"></span> Usuario
                                </NavLink>
                                <NavLink class="nav-link subitem" href="Rol_por_area">
                                    <span class="bi bi-diagram-3"></span> Roles por Área
                                </NavLink>
                                <NavLink class="nav-link subitem" href="Roles">
                                    <span class="bi bi-person-badge"></span> Roles
                                </NavLink>
                            </div>
                        }
                    </div>
                </Authorized>
            </AuthorizeView>
        </nav>
    </div>

    @* PIE DE PÁGINA: Cerrar Sesión *@
    <div class="nav-footer">
        <button class="nav-link btn-logout" @onclick="CerrarSesion">
            <span class="bi bi-box-arrow-left" aria-hidden="true"></span> Cerrar Sesión
        </button>
    </div>
</div>

@code {
    private bool isAdminOpen = false;

    private void ToggleAdminMenu() => isAdminOpen = !isAdminOpen;

    private async Task CerrarSesion()
    {
        // 1. Limpiar Token
        await LocalStorage.RemoveItemAsync("authToken");

        // 2. Notificar al AuthStateProvider
        if (AuthStateProvider is CustomAuthStateProvider customProvider)
        {
            customProvider.NotifyLogout();
        }

        // 3. Redirigir al Login principal
        Navigation.NavigateTo("/");
    }
}