@using Microsoft.AspNetCore.Components.Authorization
@using Davivienda.FrontEnd.Security
@using Davivienda.GraphQL.SDK
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject DaviviendaGraphQLClient Client

<div class="nav-container">
    @* ENCABEZADO: Perfil Dinámico *@
    <div class="user-header">
        <AuthorizeView>
            <Authorized>
                <div class="user-profile-box">
                    <div class="user-avatar-circle">
                        @(string.IsNullOrEmpty(NombreUsuario) ? "?" : NombreUsuario.Substring(0, 1).ToUpper())
                    </div>
                    <div class="user-details">
                        @* Mostramos el nombre real obtenido de la base de datos *@
                        <span class="user-name-text">@(string.IsNullOrEmpty(NombreUsuario) ? context.User.Identity?.Name : NombreUsuario)</span>
                        <span class="user-status-tag">Conectado</span>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="user-profile-box">
                    <div class="user-avatar-circle guest">?</div>
                    <div class="user-details">
                        <span class="user-name-text">Invitado</span>
                        <span class="user-status-tag">Inicie Sesión</span>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    @* CUERPO: Navegación *@
    <div class="nav-scrollable">
        <nav class="flex-column">
            <div class="nav-item-dav">
                <NavLink class="nav-link-dav" href="Asignaciones">
                    <i class="bi bi-clipboard-check"></i> <span>Asignaciones</span>
                </NavLink>
            </div>

            <AuthorizeView Roles="Administrador,LiderTecnico">
                <Authorized>
                    <div class="nav-item-dav">
                        <button class="nav-link-dav btn-dropdown-dav" @onclick="ToggleAdminMenu">
                            <i class="bi bi-shield-lock"></i>
                            <span>Gestión Admin</span>
                            <i class="bi @(isAdminOpen ? "bi-chevron-up" : "bi-chevron-down") arrow-icon"></i>
                        </button>
                        @if (isAdminOpen)
                        {
                            <div class="submenu-dav animate-slide-down">
                                <NavLink class="subitem-link" href="Proyectos"><i class="bi bi-folder2-open"></i> Proyectos</NavLink>
                                <NavLink class="subitem-link" href="Tarea"><i class="bi bi-list-task"></i> Tareas</NavLink>
                                <NavLink class="subitem-link" href="Usuario"><i class="bi bi-person-gear"></i> Usuarios</NavLink>
                                <NavLink class="subitem-link" href="Rol_por_area"><i class="bi bi-diagram-3"></i> Roles por Área</NavLink>
                                <NavLink class="subitem-link" href="Roles"><i class="bi bi-person-badge"></i> Roles</NavLink>
                            </div>
                        }
                    </div>
                </Authorized>
            </AuthorizeView>
        </nav>
    </div>

    <div class="nav-footer">
        <button class="btn-logout-dav" @onclick="CerrarSesion">
            <i class="bi bi-box-arrow-left"></i> <span>Cerrar Sesión</span>
        </button>
    </div>
</div>

@code {
    private bool isAdminOpen = false;
    private string NombreUsuario = "";

    protected override async Task OnInitializedAsync()
    {
        await ObtenerInfoUsuario();
    }

    private async Task ObtenerInfoUsuario()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                // Usamos el claim del nombre (que suele ser el email) para buscar en la BD
                var email = user.Identity.Name;
                if (!string.IsNullOrEmpty(email))
                {
                    // Ejecutamos tu query GetUsuarioByEmail
                    var res = await Client.GetUsuarioByEmail.ExecuteAsync(email);
                    if (res.Data?.UsuarioByEmail != null)
                    {
                        NombreUsuario = res.Data.UsuarioByEmail.Usu_NOM; // Asignamos el nombre real
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener nombre de usuario: {ex.Message}");
        }
    }

    private void ToggleAdminMenu() => isAdminOpen = !isAdminOpen;

    private async Task CerrarSesion()
    {
        await LocalStorage.RemoveItemAsync("authToken");
        if (AuthStateProvider is CustomAuthStateProvider customProvider)
        {
            customProvider.NotifyLogout();
        }
        Navigation.NavigateTo("/");
    }
}