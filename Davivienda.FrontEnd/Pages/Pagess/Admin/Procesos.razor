@using Davivienda.Models.Modelos
@using Davivienda.GraphQL.SDK
@inherits Davivienda.FrontEnd.Pages.Pagess.Admin.ProcesoBase

<div class="modal-backdrop-warm">
    <div class="modal-window-proceso">
        @* --- HEADER MEJORADO (SOLO CAMBIOS SOLICITADOS) --- *@
        <div class="modal-top-section">
            <div class="header-left">
                @* Botón pequeño y alineado *@
                <button class="btn-modal-back-red-small" @onclick="CerrarModal">
                    <i class="fas fa-arrow-left"></i> VOLVER A PROYECTOS
                </button>

                <div class="project-info-header">
                    <h2 class="title-project-premium">@ProyectoNombre</h2>
                    <p class="subtitle">Gestión detallada de procesos</p>
                </div>
            </div>

            @* Barra de búsqueda horizontal y larga *@
            <div class="modal-search-bar-horizontal-long">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Buscar procesos por nombre..." class="modal-input-long" @oninput="OnSearchProcesoChanged" />
            </div>
        </div>

        <hr class="separator-red" />

        <div class="proceso-grid-layout">
            @* Columna 1: Listado de Procesos (Modificación solicitada) *@
            <div class="white-panel-inner">
                <div class="panel-top-line line-red"></div>
                <div class="panel-header">
                    <h3 class="title-bold-proc">Listado de Procesos</h3>
                </div>
                <div class="scrollable-content-inner">
                    @foreach (var proc in ProcesosFiltradosEnModal)
                    {
                        <div class="process-card-visual @(ProcesoSeleccionado?.PROC_ID == proc.PROC_ID ? "active-selection" : "")"
                             @onclick="() => CargarTareasDelProceso(proc)">

                            <div class="proc-body-content">
                                <span class="proc-title-main">@proc.PROC_NOM</span>
                                <span class="proc-freq-sub">FRECUENCIA: @proc.PROC_FRE.ToUpper()</span>
                            </div>

                            @* Flecha indicadora a la derecha *@
                            <div class="proc-arrow-icon">
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* Columna 2: Configuración (ESTILO ORIGINAL INTACTO) *@
            @* Columna 2: Configuración (Diseño exacto solicitado) *@
            <div class="white-panel-inner">
                <div class="panel-top-line line-blue"></div>
                <div class="panel-header header-split-premium">
                    <h3 class="title-bold-config">Configuración</h3>
                    <button class="btn-save-premium-shadow" @onclick="GuardarCambiosProceso">
                        <i class="fas fa-check-circle"></i> GUARDAR CAMBIOS
                    </button>
                </div>

                <div class="scrollable-content-inner">
                    @if (ProcesoSeleccionado != null)
                    {
                        <div class="form-container-visual">
                            <div class="form-group-premium">
                                <label class="label-premium">NOMBRE DEL PROCESO</label>
                                <input type="text" class="input-field-premium" @bind="ProcesoSeleccionado.PROC_NOM" placeholder="Nombre..." />
                            </div>

                            <div class="form-row-premium">
                                <div class="form-group-premium flex-grow-1">
                                    <label class="label-premium">FRECUENCIA</label>
                                    <select class="select-field-premium" @bind="ProcesoSeleccionado.PROC_FRE">
                                        <option value="Diario">Diario</option>
                                        <option value="Semanal">Semanal</option>
                                        <option value="Mensual">Mensual</option>
                                    </select>
                                </div>

                                <div class="form-group-premium">
                                    <label class="label-premium">ESTADO</label>
                                    <div class="status-badge-capsule" @onclick="() => ProcesoSeleccionado.PROC_EST = !(ProcesoSeleccionado.PROC_EST ?? false)">
                                        <span class="@(ProcesoSeleccionado.PROC_EST == true ? "text-active-green" : "text-inactive-red")">
                                            @(ProcesoSeleccionado.PROC_EST == true ? "ACTIVO" : "INACTIVO")
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group-premium">
                                <label class="label-premium">DESCRIPCIÓN</label>
                                <textarea class="textarea-field-premium" rows="5" @bind="ProcesoSeleccionado.PROC_DES" placeholder="Escriba los detalles aquí..."></textarea>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* Columna 3: Tareas (ESTILO EXACTO A LA IMAGEN) *@
            @* Columna 3: Tareas (Diseño exacto solicitado) *@
            <div class="white-panel-inner">
                <div class="panel-top-line line-green"></div>
                <div class="panel-header">
                    <h3 class="title-bold-task">Tareas</h3>
                    @if (ProcesoSeleccionado?.PROC_ID != Guid.Empty && ProcesoSeleccionado != null)
                    {
                        <button class="btn-new-task-capsule" @onclick="AbrirCrearTarea">
                            <i class="fas fa-plus-circle"></i> NUEVA
                        </button>
                    }
                </div>
                <div class="scrollable-content-inner">
                    @if (TareasDelProceso != null && TareasDelProceso.Any())
                    {
                        @foreach (var tar in TareasDelProceso)
                        {
                            <div class="task-card-premium-v2" @onclick="() => AbrirEditarTarea(tar)">
                                @* Indicador lateral de color según estado *@
                                <div class="task-status-bar @(tar.TAR_EST == "Completado" ? "status-green" : "status-orange")"></div>

                                <div class="task-content-v2">
                                    <p class="task-title-v2">@tar.TAR_NOM</p>
                                    <span class="task-label-v2">@tar.TAR_EST.ToUpper()</span>
                                </div>

                                @* Icono de lápiz a la derecha *@
                                <div class="task-edit-icon">
                                    <i class="fas fa-pencil-alt"></i>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data-msg">Sin tareas disponibles.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (MostrarModalTarea)
{
    <div class="modal-overlay-secondary"><Davivienda.Component.Componentes.EditarTarea Tarea="TareaSeleccionada" OnClose="CerrarModalTarea" /></div>
}
@if (MostrarModalCrearTarea)
{
    <div class="modal-overlay-secondary"><Davivienda.Component.Componentes.CrearTarea ProcId="ProcesoSeleccionado!.PROC_ID" OnClose="CerrarModalCrearTarea" /></div>
}